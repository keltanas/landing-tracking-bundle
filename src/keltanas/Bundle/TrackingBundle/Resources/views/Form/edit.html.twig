{% extends '::base.html.twig' %}

{% block title 'form.edit'|trans %}

{% block body -%}
<div class="container">
    <h1>{{ block('title') }}</h1>

    {{ form_start(edit_form, { 'attr': { 'class': 'form-horizontal' } }) }}

    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.email) }}
    {{ form_row(edit_form.title) }}
    {{ form_row(edit_form.button) }}
    {{ form_row(edit_form.template) }}

    <div class="well well-sm">
        <a href="{{ path('keltanas_tracking_form') }}" class="btn btn-default">
            {{ 'back.to.list'|trans }}
        </a>
        {{ form_widget(edit_form.submit, { 'attr':{ 'class':'btn btn-success' } }) }}
        {#{{ form(delete_form) }}#}
    </div>
    {{ form_end(edit_form) }}
</div>
{% endblock %}
