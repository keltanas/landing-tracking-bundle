<div class="panel-form">
    {{ form_start(form, {
        'attr':{
            'id': entity.name,
            'class':'form-horizontal',
            'novalidate': 'novalidate',
        }
    }) }}
    <h3 class="col-sm-offset-3">{{ entity.title }}</h3>
    <div class="form-group">
        {{ form_label(form.name) }}
        <div class="col-sm-9">
            {{ form_widget(form.name, {'attr': {'class': 'form-control input-lg'}}) }}
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.phone) }}
        <div class="col-sm-9">
            {{ form_widget(form.phone, {'attr': {'class': 'form-control input-lg'}}) }}
            {{ form_errors(form.phone) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3">
            <button type="submit" class="btn btn-lg btn-danger">{{ entity.button }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
