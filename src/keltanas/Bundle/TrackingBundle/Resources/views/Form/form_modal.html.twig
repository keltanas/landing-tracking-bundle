<div class="modal-dialog panel-form">
    {{ form_start(form, {
        'attr':{
            'id': entity.name,
            'class':'form-horizontal',
            'novalidate': 'novalidate',
        }
    }) }}

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">{{ entity.title }}</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                {{ form_label(form.name) }}
                <div class="col-sm-9">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control input-lg'}}) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.phone) }}
                <div class="col-sm-9">
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control input-lg'}}) }}
                    {{ form_errors(form.phone) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-danger">{{ entity.button }}</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close'|trans }}</button>
        </div>
    </div><!-- /.modal-content -->
    {{ form_end(form) }}
</div><!-- /.modal-dialog -->

