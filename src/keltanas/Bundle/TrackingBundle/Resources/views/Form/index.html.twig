{% extends '::base.html.twig' %}

{% block title "Form list"|trans %}

{% block body -%}
<div class="container">
    <h1>{{ block('title') }}</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'name'|trans }}</th>
                <th>{{ 'email'|trans }}</th>
                <th>{{ 'title'|trans }}</th>
                <th>{{ 'button'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('keltanas_tracking_form_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.button }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('keltanas_tracking_form_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('keltanas_tracking_form_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="well well-sm">
        <a href="{{ path('keltanas_tracking_form_new') }}" class="btn btn-primary">{{ 'create.new.entry'|trans }}</a>
    </div>
</div>
{% endblock %}
