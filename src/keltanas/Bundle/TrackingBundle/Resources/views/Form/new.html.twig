{% extends 'keltanasTrackingBundle::base.html.twig' %}

{% block title 'form.creation'|trans %}

{% block body -%}
<div class="container">
    <h1>{{ block('title') }}</h1>

    {{ form_start(form, { 'attr': { 'class': 'form-horizontal' } }) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.title) }}
    {{ form_row(form.button) }}
    {{ form_row(form.template) }}

    <div class="well well-sm">
        <a href="{{ path('keltanas_tracking_form') }}" class="btn btn-default">
            {{ 'back.to.list'|trans }}
        </a>
        {{ form_widget(form.submit, { 'attr':{ 'class':'btn btn-success' } }) }}
    </div>
    {{ form_end(form) }}

